<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="60dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid
                android:color="@color/colorPrimaryBright"/>  <!-- background color -->
        </shape>
    </item>

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <corners android:radius="60dp"/>
            <solid android:color="@color/colorPrimaryBackground"/>
        </shape>
    </item>

    <item
        android:bottom="20dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <solid
            android:color="@color/colorPrimaryBright"/>  <!-- background color -->
        </shape>
    </item>


</layer-list>