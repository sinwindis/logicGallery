<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "StyleFontSmall">
        <item name = "android:textSize">12sp</item>
        <item name = "android:textColor">@color/colorBlack</item>
        <item name = "android:fontFamily">@font/paybooc_bold</item>
    </style>
    <style name = "StyleFontMedium">
        <item name = "android:textSize">15sp</item>
        <item name = "android:textColor">@color/colorBlack</item>
        <item name = "android:fontFamily">@font/paybooc_bold</item>
    </style>
    <style name = "StyleFontLarge">
        <item name = "android:textSize">20sp</item>
        <item name = "android:textColor">@color/colorBlack</item>
        <item name = "android:fontFamily">@font/paybooc_bold</item>
    </style>

    <style name = "StyleEditText">
        <item name = "android:textSize">12sp</item>
        <item name = "android:textColor">@color/colorBlack</item>
        <item name = "android:fontFamily">@font/paybooc_bold</item>
        <item name = "android:textColorHint">@color/colorGray</item>
        <item name = "android:textAlignment">center</item>
    </style>

</resources>