<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
            <solid android:color="#00000000" />  <!-- background color -->
        </shape>
    </item>

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">

            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
            <solid android:color="#10404040" />  <!-- background color -->
        </shape>
    </item>

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">

            <solid android:color="@color/colorWhite" />  <!-- background color -->
        </shape>
    </item>
</layer-list>