<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_levelcreate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_drag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_buttons"
        app:layout_constraintBottom_toTopOf="@id/rv_levelcreate"
        app:layout_constraintDimensionRatio="1:1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_levelcreate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/border_drag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:overScrollMode="never"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_levelcreate">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="name"
            android:backgroundTint="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toStartOf="@id/et_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_make"/>

        <EditText
            android:id="@+id/et_height"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:hint="height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/et_width"
            app:layout_constraintStart_toEndOf="@id/et_name"
            app:layout_constraintBottom_toTopOf="@id/btn_make"/>

        <EditText
            android:id="@+id/et_width"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/colorBlack"
            android:hint="width"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_height"
            app:layout_constraintBottom_toTopOf="@id/btn_make"
            android:inputType="number"/>

        <Button
            android:id="@+id/btn_make"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"
            app:layout_constraintEnd_toStartOf="@id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_btn_accent"
            android:text="load image"
            android:textColor="@color/colorBlack"
            />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_make"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/background_btn"
            android:text="cancel"
            android:textColor="@color/colorBlack"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>