<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <padding android:left="9dp" android:top="9dp" android:right="9dp" android:bottom="9dp" />
            <solid
                android:color="#00000000"/>  <!-- background color -->
        </shape>
    </item>

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
            <solid
                android:color="#10404040"/>  <!-- background color -->
        </shape>
    </item>

    <item>   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid
                android:color="@color/colorWhite"/>  <!-- background color -->
        </shape>
    </item>
</layer-list>