<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlack" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:top="1dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/colorPrimaryBright"/>
        </shape>
    </item>

    <item
        android:top="1dp"
        android:bottom="10dp">   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryBright"/>
        </shape>
    </item>
</layer-list>